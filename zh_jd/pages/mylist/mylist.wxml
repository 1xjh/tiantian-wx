<!--index.wxml-->
<view class="container font">
  <view class="page">
    <view class="page__bd">
      <view class="weui-tab">
        <view class="weui-navbar">
          <view id="all" class="weui-navbar__item {{activeIndex == 'all' ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">全部</view>
          </view>
          <!-- 标题 -->
          <block wx:for="{{tabs}}" wx:key="*this">
            <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
              <view class="weui-navbar__title">{{item}}</view>
            </view>
          </block>
          <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
        </view>
        <view class="weui-tab__panel">

          <!--全部 -->

          <view hidden="{{activeIndex != 'all'}}">
            <!-- <view wx:if="{{allOrder==null||order==false||allOrder==''}}"> -->
            <view wx:if="{{aruzhu==false && azhifu==false && awancheng==false}}">
              <view class="mylist_back1">
                <image class="mylist_back2" src="../../images/backg.png"></image>
              </view>
              <view class='aaa'>没有订单，定个房间试试吧</view>
            </view>
             <block wx:for="{{ruzhu}}" wx:if="{{ruzhu!=''}}" wx:key="index">
              <form bindsubmit="formSubmit" report-submit="true" bindreset="formReset" data-oid="{{item.id}}">
                <view class="mylist1" bindtap='details' data-xid="{{item.id}}">
                  <view class="mylist_title">
                    <text>定单号 : {{item.danhao}}</text>
                    <text class="mylist_title3" wx:if="{{item.status==1}}">已支付</text>
                    <text class="mylist_title3" wx:if="{{item.status==2}}">待入住</text>
                    <text class="mylist_title3" wx:if="{{item.status==3}}">已完成</text>
                  </view>
                  <view class="line"></view>
                  <view class="mylist_centent_box">
                    <view class="mylist_img">
                      <image src='../../images/beijing.png'></image>
                    </view>
                    <view class="mylist_title_box">
                      <view class="mylist_title1">{{item.name}}</view>
                      <view class="mylist_title2">{{item.title}}</view>
                      <view class="mylist_title2">{{item.start}}</view>
                      <view class="mylist_title2">{{item.end}}</view>
                    </view>
                  </view>
                </view>
                <view class="mylist_banner1 mylist_title2">
                  <view class="mylist_banner2">合计：{{item.price}}</view>
                  <view class="mylist_banner3" hidden="{{quxiaodingdan}}">
                    <!-- <view class="mylist_banner4" bindtap="click1" data-oid="{{item.id}}">取消订单</view> -->
                    <view class="mylist_banner5">
                      <button formType="submit" bindtap='click_money'  wx:if="{{item.status==1}}">去付款</button>
                      <button formType="submit" bindtap='click_money'  wx:if="{{item.status==3}}">去评价</button>
                    </view>
                  </view>
                </view>
              </form>
            </block>

          </view>
          <!--待支付  -->
          <view hidden="{{activeIndex != 0}}">
            <!-- <view wx:if="{{ruzhu==null||order==false||ruzhu[0].id==''||aruzhu=='false'}}"> -->
            <view wx:if="{{azhifu==false}}">
              <view class="mylist_back1">
                <image class="mylist_back2" src="../../images/backg.png"></image>
              </view>
              <view class='aaa'>没有订单，定个房间试试吧</view>
            </view>
            <block wx:for="{{ruzhu}}" wx:if="{{ruzhu!=''}}" wx:key="key">
              <form bindsubmit="formSubmit" report-submit="true" bindreset="formReset" data-oid="{{item.id}}" wx:if="{{item.status==1}}">
                <view class="mylist1" bindtap='details' data-xid="{{item.id}}">
                  <view class="mylist_title">
                    <text>定单号 : {{item.danhao}}</text>
                    <text class="mylist_title3">待支付</text>
                  </view>
                  <view class="line"></view>
                  <view class="mylist_centent_box">
                    <view class="mylist_img">
                      <image src='../../images/beijing.png'></image>
                    </view>
                    <view class="mylist_title_box">
                      <view class="mylist_title1">{{item.name}}</view>
                      <view class="mylist_title2">{{item.title}}</view>
                      <view class="mylist_title2">{{item.start}}</view>
                      <view class="mylist_title2">{{item.end}}</view>
                    </view>
                  </view>
                </view>
                <view class="mylist_banner1 mylist_title2">
                  <view class="mylist_banner2">合计：{{item.price}}</view>
                  <view class="mylist_banner3" hidden="{{quxiaodingdan}}">
                    <!-- <view class="mylist_banner4" bindtap="click1" data-oid="{{item.id}}">取消订单</view> -->
                    <view class="mylist_banner5">
                      <button formType="submit" bindtap='click_money'>去付款</button>
                    </view>
                  </view>
                </view>
              </form>
            </block>
          </view>
          <!--待入住  -->
          <view class="weui-tab__content mylist_back" hidden="{{activeIndex != 1}}">
            <!-- <view wx:if="{{check==null||check==''||orders==false}}"> -->
             <view wx:if="{{aruzhu==false}}">
              <view class="mylist_back1">
                <image class="mylist_back2" src="../../images/backg.png"></image>
              </view>
              <view class='aaa'>没有已付款的订单</view>
            </view>
            <block wx:for="{{ruzhu}}" wx:if="{{ruzhu!=''}}" wx:key="index">
              <form bindsubmit="formSubmit" report-submit="true" bindreset="formReset" data-oid="{{item.id}}" wx:if="{{item.status==2}}">
                <view class="mylist1" bindtap='details' data-xid="{{item.id}}">
                  <view class="mylist_title">
                    <text>定单号 : {{item.danhao}}</text>
                    <text class="mylist_title3">待入住</text>
                  </view>
                  <view class="line"></view>
                  <view class="mylist_centent_box">
                    <view class="mylist_img">
                      <image src='../../images/beijing.png'></image>
                    </view>
                    <view class="mylist_title_box">
                      <view class="mylist_title1">{{item.name}}</view>
                      <view class="mylist_title2">{{item.title}}</view>
                      <view class="mylist_title2">{{item.start}}</view>
                      <view class="mylist_title2">{{item.end}}</view>
                    </view>
                  </view>
                </view>
                <view class="mylist_banner1 mylist_title2">
                  <view class="mylist_banner2">合计：{{item.price}}</view>
                  <view class="mylist_banner3" hidden="{{quxiaodingdan}}">
                  </view>
                </view>
              </form>
            </block>
          </view>
          <!--已经完成 -->
          <view class="mylist_back" hidden="{{activeIndex != 2}}">
            <!-- <view wx:if="{{cancel==null||order==false||cancel==''}}"> -->
            <view wx:if="{{awancheng==false}}">
              <view class="mylist_back1">
                <image class="mylist_back2" src="../../images/backg.png"></image>
              </view>
              <view class='aaa'>没有以玩的的订单，去定个房吧</view>
            </view>
             <block wx:for="{{ruzhu}}" wx:if="{{ruzhu!=''}}" wx:key="index">
              <form bindsubmit="formSubmit" report-submit="true" bindreset="formReset" data-oid="{{item.id}}" wx:if="{{item.status==3}}">
                <view class="mylist1" bindtap='details' data-xid="{{item.id}}">
                  <view class="mylist_title">
                    <text>定单号 : {{item.danhao}}</text>
                    <text class="mylist_title3">已完成</text>
                  </view>
                  <view class="line"></view>
                  <view class="mylist_centent_box">
                    <view class="mylist_img">
                      <image src='../../images/beijing.png'></image>
                    </view>
                    <view class="mylist_title_box">
                      <view class="mylist_title1">{{item.name}}</view>
                      <view class="mylist_title2">{{item.title}}</view>
                      <view class="mylist_title2">{{item.start}}</view>
                      <view class="mylist_title2">{{item.end}}</view>
                    </view>
                  </view>
                </view>
                <view class="mylist_banner1 mylist_title2">
                  <view class="mylist_banner2">合计：{{item.price}}</view>
                  <view class="mylist_banner3" hidden="{{quxiaodingdan}}">
                    <!-- <view class="mylist_banner4" bindtap="click1" data-oid="{{item.id}}">取消订单</view> -->
                    <view class="mylist_banner5">
                      <button formType="submit" bindtap='click_money'>去评价</button>
                    </view>
                  </view>
                </view>
              </form>
            </block>
          </view>
          <!--已经完成 -->
        </view>
      </view>
    </view>
  </view>
</view>