.active {
  border: 1px solid #A4A4A4;
  border-right: none;
  width: 95%;
  margin: 20rpx auto;
  height: 180rpx;
  color: #A4A4A4;
  justify-content: space-between;
}
.coupon_price {
  font-size: 60rpx;
  font-family: FZCQJW--GB1-0;
  font-weight: bold;
}

.coupon_price view:last-child{
  margin-left: 61rpx;
  margin-top: -25rpx;
}
.coupon_content {
  width: 30%;
  font-size: 18rpx;
  font-family: SimSun;
  font-weight: 400;
  height: 100rpx;
  margin-top:20rpx;
}

.coupon_image {
  width: 33%;  
  background:#fff;
}
.coupon_image image{
  width: 100%;
  height: 100%;
}
/* 官方版 */
.users{
  width: 85%;
  height: 70rpx;
  line-height: 70rpx;
  text-indent: 50rpx;
  font-size: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 30rpx auto 0;
}
.effective,already,overdue{
  color: #41ac8d
}
.default{
  color: #222;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
.container{
  width: 100%;
  height: 100%;
}
.header{
  width: 100%;
  height: 100rpx;
  margin: 0 auto;
}
.background{
  width: 100%;
  height: 60%;
  top: 0;
  background: #F9882B;
  z-index: 1;
}
.option{
  /* width: 95%; */
  height: 100%;
  background: #fff;
  /* border-radius: 10rpx; */
  /* margin: 0 auto; */
  z-index: 100;
}
.option_son{
  width: 100%;
  height: 30rpx;
  display: flex;
}
.option_son>view{
  flex:3;
  border-right: 1rpx solid #222;
  text-align: center;
  line-height: 30rpx;
  font-size: 28rpx;
}
.option_son>view:nth-child(3){
  border: none;
}
.coupons{
  width: 90%;
  height: auto;
  margin: 0 auto;
}
.coupons_son{
  width: 100%;
  height: 150rpx;
  border-radius: 8rpx; 
  margin-bottom: 10rpx;
  color: #222;
  background: #fff;
  /* background: linear-gradient(to right, #F9882B , #5C38F7); */
  overflow: hidden;
}
.none_coupon{
  width: 100%;
  height: 350rpx;
  border-radius: 8rpx; 
}
.none_coupon>view{
  width: 400rpx;
  height: 250rpx;
}
.none_coupon>view view{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  bottom: 0;
}
.none_coupon image{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.son_left{
  width: 150rpx;
  height: 150rpx;
  box-sizing: border-box;
  display: inline-block;
  /* background: #F9882B; */
  background: #41ac8d;
   border-right: 2rpx dotted #fff; 
}
.son_left>view:nth-child(1){
  width: 36rpx;
  height: 18rpx;
   background: #fff; 
  top: 0;
  border-radius: 0 0 18rpx 18rpx;
  right: -18rpx;
}
.son_left>view:nth-child(2){
  width: 36rpx;
  height: 18rpx;
   background: #fff; 
  bottom: 0;
  border-radius: 18rpx 18rpx 0 0;
  right: -18rpx;
}
.son_left>view:nth-child(3){
  width: 100%;
  height: 100%;
  top: 0;
  text-align: center;
  line-height: 150rpx;
  font-size: 60rpx;
  font-weight: bold;
  color: #fff;
}

.son_right{
  height: 100%;
  width: auto;
  background: #fff;
  display: inline-block;
}
.son_right>view{
 width: 400rpx;
  line-height: 50rpx;
  color: #333;
  text-indent: 50rpx;
}
.son_right .ab1{
  top: 0;
  font-size: 35rpx;
}
.son_right .ab2{
  top: 100rpx;
  font-size: 24rpx;
}
.son_right .ab0{
  top: 50rpx;
  font-size: 24rpx;
overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis;
}
.not_user{
  right: -50rpx;
  top:20rpx;
  color: #fff;
  background: #F9882B;
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  transform:rotate(45deg);
}

.not_user view{
  width: 100%;
  height: 100%;
}
.color{
  width: 95%;
  height: 40rpx;
  display: flex;
  margin: 20rpx auto;
}
.color>view{
  flex:5;
  text-align: center;
  position: relative;
}
.color>view view{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
}