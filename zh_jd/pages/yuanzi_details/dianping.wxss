  font-weight: 400;
  color: rgba(34, 34, 34, 1);
}

.comment_title_time {
  font-size: 18rpx;
  font-weight: 400;
  color: #5f5f5f;
  margin-left: 10rpx;
  margin-top: -5rpx;
}

.comment_fen {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(95, 95, 95, 1);
  margin-left: 10rpx;
}

.comment_fen image {
  width: 18rpx;
  height: 18rpx;
}

.comment_a_content {
  font-size: 24rpx;
  font-family: SourceHanSansCN-Regular;
  font-weight: 400;
  color: rgba(34, 34, 34, 1);
  line-height: 40rpx;
}

.comment_info_image {
  margin-top: 20rpx;
}

.comment_info_image image {
  width: 172rpx;
  height: 130rpx;
  margin-left: 3rpx;
}
.hui_fu{
  background:#ecf6f4;
  padding: 10rpx;

}
.hui_fu view {
