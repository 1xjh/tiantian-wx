.box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

.comment_top {
  font-size: 20rpx;
  justify-content: space-around;
  width: 93%;
  height: 113rpx;
  background: #ecf6f4;
  margin: 20rpx auto;
  color: #5f5f5f;
}

.comment_image image {
  width: 30rpx;
  height: 30rpx;
}

.comment_left_fen {
  color: #40ab91;
  font-size: 28rpx;
}

.comment_right {
  line-height: 40rpx;
  margin-top: 14rpx;
}

/* 内容 */

.comment_content_box {
  width: 93%;
  margin: 0 auto;
}
.comment_content{
  margin:  80rpx 0;
}
/* 头像 */

.comment_title image {
  width: 60rpx;
  height: 60rpx;
}

.comment_title_time .comment_title_name {
  font-size: 28rpx;
